# -*- makefile -*-
# -----------------------------------------------------------------------
# -----------------------------------------------------------------------

null 	    :=#
space	    :=$(null) $(null)

PYTHON      ?= /usr/bin/env python

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
all: try

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
test-args += -m unittest
check test:
	$(PYTHON) $(test-args) discover -v

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
help:
	@echo "USAGE: $(MAKE)"
	@echo "  all"
	@echo "  test     Invoke available unit tests (find . -name 'test_*.py')"

# [EOF]
